@model List<UserDetailDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Gender</th>
            <th>DateOfBirth</th>
            <th>Email</th>
            <th>Address</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Gender</td>
                <td>@user.DateOfBirth.ToShortDateString()</td>
                <td>@user.Email</td>
                <td>@user.Address</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@user.Id" class="badge bg-warning text-white">Detail</a>
                    <a asp-action="Update" asp-route-id="@user.Id" class="badge bg-primary">Update</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('@user.UserName adlı kullanıcıyı silmek istediğinize emin misiniz ?')" class="badge bg-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="User" asp-action="Add">User Create</a>